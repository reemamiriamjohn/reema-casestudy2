      <div class="form-panel" style="width: fit-content;max-width: 520px;">
        <div class="box form-container">
          <h2 class="form-heading">EDIT BOOK</h2>
         
          <form class="form" id="form" action="/admin/update_book/<%=id%>/book_edited" method="POST" enctype="multipart/form-data" >
                <div class="form_control">
                    <label for="">Book Title</label>
                    <input type="text" placeholder="Book Title" id="book-title" name="title" value="<%=book.book_title%>" required>
                    
                </div>
                <div class="form_control">
                    <label for="">Author Name</label>
                    <input type="text" placeholder=" Author Name" id="author-name" name="author" value="<%=book.book_author%>" required>
                   
                </div>
                <div class="form_control">
                    <label for="">Book Genre</label>
                    <input type="text" placeholder="Book Genre" id="book-genre" name="genre" value="<%=book.book_genre%>" required>
            
                </div>
                <br>
                <div >
                    <label for="">Book Cover Image</label>
                 
                    <div class="mb-3">
                      
                      <input class="form-control" type="file" id="book-img" name="image" value="<%=book.book_image%>" required>
                    </div>
                </div><br>
                <button class="btn btn-primary" type="submit">Submit</button>
                <br>
          </form>
