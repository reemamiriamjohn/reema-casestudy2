    </head>
	<body  style="background-color: lightgreen;">
<header class="navbar navbar-bright navbar-fixed-top" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="navbar-brand">Home</a>
    </div>
    <nav class="collapse navbar-collapse" role="navigation">
      <%for(i=0;i<nav.length;i++){%>
      <ul class="nav navbar-nav">
        <li>
          <a href="<%=nav[i].link%>"><%=nav[i].name%></a>
        </li>
      </ul>
      <%}%>
    </nav>
  </div>
</header>


<div class="container" >
  <div class="row g-3" style="align-content: center;">
    <div class="col-md-3"></div>
    <div class="col-md-6"> 
      <div class="form-panel" style="width: fit-content;">
        <!-- signup form -->
        <div class="box signup-form  form-container">
          <h2 class="form-heading">Sign In</h2>
          <% if(typeof err != 'undefined'){%>
            <div class="alert alert-dismissible alert-danger">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong><%= err %></strong> 
            </div>
          <%}%>
          <!-- <form class="form" id="form" action="/signup" method="POST" onsubmit="return validate_signup();"> -->
          <form class="form" id="form" action="/signup" method="POST">  
            <div class="row"  style="display: inline-flex;">
                <div class="col">
                    <div class="form_control">
                        <label for=""> Name</label>
                        <div></div>
                        <input type="text" placeholder=" First Name" id="first-name" value="<%= typeof fname != 'undefined' ? fname : '' %>" name="fname">
                        <!-- <p>Error message</p> -->
                        <%if(typeof alerts === 'undefined'){%>
                          <p></p>
                        <%}else { if(alerts.fname){%>
                          <p class="text-danger"> <%=alerts.fname.msg%> </p>
                        <%}else{%>
                          <p class="text-success"> Valid Data </p>
                        <%}}%>
                    </div>
                </div> &nbsp;&nbsp;&nbsp;
                <div class="col">
                  <div class="form_control">
                    <label for="">Last Name</label>
                    <div></div>
                    <input type="text" placeholder="Last Name" id="last-name" value="<%= typeof lname != 'undefined' ? lname : '' %>" name="lname" >
                    <%if(typeof alerts === 'undefined'){%>
                      <p></p>
                    <%}else { if(alerts.lname){%>
                      <p class="text-danger"> <%=alerts.lname.msg%> </p>
                    <%}else{%>
                      <p class="text-success"> Valid Data </p>
                    <%}}%>
                </div> 
                </div>
            </div>
                <div class="form_control">
                    <label for="">Email </label>
                    <div></div>
                    <input type="email" placeholder="Email" id="email"  style="width:100%;" value="<%= typeof email != 'undefined' ? email : '' %>" name="email">
                    <!-- <p>Error message</p> -->
                    <% if(typeof alerts === 'undefined'){%>
                      <p></p>
                    <%}else { if(alerts.email){%>
                      <p class="text-danger"> <%=alerts.email.msg%> </p>
                    <%}else{%>
                      <p class="text-success"> Valid email </p>
                    <%}}%>
                </div>
                
                <div class="form_control">
                    <label for="">Password</label>
                    <div></div>
                    <input type="password" placeholder=" Password" id="password" name="password" style="width: 100%;" onkeyup="return checkStrength();">
                    <!-- <p>Error message</p><br> -->
                    <% if(typeof alerts === 'undefined'){%>
                      <p></p>
                    <%}else { if(alerts.password){%>
                      <p class="text-danger"> <%=alerts.password.msg%> </p>
                    <%}else{%>
                      <p class="text-success"> Valid password </p>
                    <%}}%>
                    <div class="popover-password">
                        <p><span id="result"></span></p>
                        <div class="progress">
                            <div id="password-strength" class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
                        </div>
                    </div>
                    <p style="text-align: left;">Password Requirements :-</p>
                    <ul class="list-unstyled">
                        <li>
                            <span class="low-upper-case">
                                Lowercase &amp; Uppercase
                            </span>
                        </li>
                        <li>
                            <span class="one-number">
                                Numbers 
                            </span>
                        </li>
                        <li>
                            <span class="one-special-char">
                                Special characters 
                            </span>
                        </li>
                        <li>
                            <span class="eight-character">
                                Atleast 8 characters
                            </span>
                        </li>
                    </ul>
                </div>
                <div class="form_control">
                    <label for="">Confirm Password</label>
                    <input  type="password" placeholder="Confirm Password" id="password2" name="confirmpassword" style="width: 100%;">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <!-- <p>Error message</p> -->
                    <% if(typeof alerts === 'undefined'){%>
                          <p></p>
                        <%}else { if(alerts.confirmpassword){%>
                          <p class="text-danger"> <%=alerts.confirmpassword.msg%> </p>
                        <%}else{%>
                          <p class="text-success"> Password matches </p>
                        <%}}%>
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
                <br>
                <label><a class="login-link" href="/login" >Login</a></label>
          </form>
        </div>
        <!-- signup form -->
      </div>
    </div><!--/col-6-->    
    <div class="col-md-3"></div>
  </div>
</div>
                                                
                                                                                
<hr>

